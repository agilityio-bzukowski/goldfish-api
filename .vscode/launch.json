{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI: run",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload", "--host", "0.0.0.0", "--port", "8000"],
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "src" },
      "justMyCode": false
    },
    {
      "name": "FastAPI: run (no reload)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--host", "0.0.0.0", "--port", "8000"],
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "src" },
      "justMyCode": false
    },
    {
      "name": "Pytest: current file",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["${file}", "-v", "--no-cov"],
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "src" },
      "justMyCode": false
    },
    {
      "name": "Pytest: all tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["src/tests", "-v"],
      "cwd": "${workspaceFolder}",
      "env": { "PYTHONPATH": "src" },
      "justMyCode": false
    }
  ]
}
